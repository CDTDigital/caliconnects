<main class="login">
  <div class="login__title">Login</div>
  <div class="login__form">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login__form-group">
        <%= f.label :email, class: "login__form-label" %>
        <%= f.email_field :email, autofocus: true, class: "login__form-input"  %>
      </div>

      <div class="login__form-group">
        <%= f.label :password, class: "login__form-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "login__form-input" %>
      </div>


      <div class="login__form-group">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "login__form-label" %>
        <% end -%>
      </div>

      <div class="login__form-group">
        <%= f.submit "Login" %>
      </div>
      <%= render "users/shared/links" %>
    <% end %>

  </div>

</main>
