<div class="admin__container">

  <%= render partial: 'admin/shared/admin_sidebar' %>

  <main class="admin__data-maps">

    <section class="data-maps">
      <div class="data-maps__title">River Gauge</div>

      <div>
        <button>Create New Campaign</button>
        <button>Add to Existing Campaign</button>
      </div>

      <div class="data-maps__images">
        <div class="data-maps__images-map">
          <div class="data-maps__image-title">Current</div>
          <div class="data-maps__image" id="rivers"></div>
        </div>

        <div class="data-maps__images-map">
          <div class="data-maps__image-title">Historical</div>
          <div class="data-maps__image"></div>
        </div>

      </div>

      <div id="rivers-data"></div>
      <table id="rivers-data--table" class="usa-table-borderless">
        <tr class="data-maps__table-data">
          <th>Description</th>
          <th>Timestamp</th>
          <th>Link</th>
        </tr>
      </table>

      <div id="rivers-url" style="display: none"><%= disaster_events_rivers_url %></div>

    </section>
  </main>
</div>
